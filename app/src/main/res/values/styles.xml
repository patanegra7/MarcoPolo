<resources>
    <!-- Base application theme. -->
    <style name="MarcoPoloTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Basic colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Texts -->
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <!-- Buttons -->
        <item name="android:buttonStyle">@style/defaultButton</item>
        <item name="buttonStyle">@style/defaultButton</item>
    </style>

    <!-- Layouts -->
    <style name="formLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/paddingDefault</item>
    </style>
    <style name="buttonLayout" parent="formLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:divider">@drawable/space_medium</item>
        <item name="android:showDividers">middle</item>
    </style>
    <style name="editExpenseSpinnerLayout" parent="formLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:divider">@drawable/space_medium</item>
        <item name="android:showDividers">middle</item>
    </style>


    <!-- Texts -->
    <style name="textViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">@dimen/defaultTextSize</item>
        <!--item name="android:layout_margin">20dp</item-->
    </style>
    <style name="titleTextViewStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/paddingDefault</item>
    </style>

    <!-- Buttons -->
    <style name="defaultButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
