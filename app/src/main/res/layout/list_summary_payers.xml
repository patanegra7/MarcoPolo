<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/summary_payer_row"
    android:paddingLeft="@dimen/paddingDefault"
    android:paddingRight="@dimen/paddingDefault"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/summary_payer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".45"/>

    <TextView
        android:id="@+id/summary_currency_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".30"/>

    <TextView
        android:id="@+id/summary_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"/>

</LinearLayout>


