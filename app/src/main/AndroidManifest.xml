<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.dme.smart.marcopolo">

    <application
        android:name=".model.global.MarcoPoloApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DailyActivity" android:launchMode="singleTask"/>
        <activity android:name=".activities.SummaryActivity" android:launchMode="singleTask"/>
        <activity android:name=".activities.ExportActivity" android:launchMode="singleTask"/>
        <activity android:name=".activities.CreditsActivity" android:launchMode="singleTask"/>
        <activity android:name=".activities.SettingsActivity" android:launchMode="singleTask"/>
        <activity android:name=".activities.TripActivity" android:launchMode="singleTask"/>
    </application>

</manifest>